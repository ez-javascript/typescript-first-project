{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "./build",
        "./node_modules"
    ]
}